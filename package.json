{
  "name": "simulated-tax-visualization",
  "version": "0.1.1",
  "description": "[![Build Status](https://travis-ci.com/ymkjp/simulated-tax-visualization.svg?branch=master)](https://travis-ci.com/ymkjp/simulated-tax-visualization)",
  "scripts": {
    "test": "npm-run-all lint",
    "lint": "npm-run-all lint:**",
    "lint:js": "standard --fix",
    "lint:shell": "docker run --rm -v $PWD:/mnt koalaman/shellcheck:v0.5.0 --exclude=SC1090 tool/*.bash",
    "lint:md": "markdownlint README.md",
    "watch": "npm-run-all --parallel watch:**",
    "watch:crx:js": "onchange  --delay 100 '*.json' 'src/**/*.*js' -- npm-run-all lint:js",
    "watch:shell": "onchange  --delay 1000 'tool/**/*.*sh' -- npm-run-all lint:shell",
    "watch:md": "onchange  --delay 1000 '*.md' -- npm-run-all lint:md",
    "prestart": "yarn install",
    "start": "npm-run-all lint watch"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "eslint-plugin-flowtype": "^3.11.1",
    "flow-bin": "^0.102.0",
    "markdownlint-cli": "^0.17.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^6.0.0",
    "standard": "^13.0.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "numeral",
      "palette",
      "Chart"
    ]
  },
  "browserify": {
    "transform": [
      "brfs",
      [
        "babelify",
        {
          "presets": [
            "env",
            "flow"
          ],
          "plugins": [
            "transform-object-rest-spread"
          ]
        }
      ]
    ]
  },
  "main": "tool/project.bash",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ymkjp/simulated-tax-visualization.git"
  },
  "author": "Kenta Yamamoto <ymkjp@jaist.ac.jp>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ymkjp/simulated-tax-visualization/issues"
  },
  "homepage": "https://github.com/ymkjp/simulated-tax-visualization"
}
